    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug NestJS WS",
            "port": 9229,
            "restart": true,
            "stopOnEntry": false,
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Debug NestJS WS",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}",
            "protocol": "inspector",
            "port": 9229,
            "restart": true,
            "address": "0.0.0.0",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}